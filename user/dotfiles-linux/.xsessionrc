#!/bin/bash

# this file serves as a way to configure X but not to run applications
# it's expected to be sourced by something else, like /etc/X11/Xsession.


# for 2x font scaling, use "Xft.dpi: 192" in .Xresources
# gtk upscales everything, then down-scales fonts to recover Xft.dpi
#export GDK_SCALE=2
#export GDK_DPI_SCALE=0.5
## qt can upscale just the ui and leave fonts at Xft.dpi
#export QT_SCREEN_SCALE_FACTORS=2
#
[[ -r $HOME/.Xresources ]] && xrdb -merge $HOME/.Xresources
[[ -x $HOME/.Xmodmap ]] && $HOME/.Xmodmap

